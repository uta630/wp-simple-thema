{
    "parser": "@typescript-eslint/parser",
    "extends":[
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended",
        "eslint:recommended",
        "plugin:node/recommended"
    ],
    "parserOptions":  {
        "ecmaVersion":  2018,
        "sourceType":  "module"
    },
    "plugins": [
        "node"
    ],
    "rules": {
        "node/no-unsupported-features": [
            "error", {
                "version": 8
            }
        ]
    }
}
